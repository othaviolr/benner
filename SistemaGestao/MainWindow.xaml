<Window x:Class="SistemaGestao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Gestão - Menu Principal" 
        Height="450" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#F8FAFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Border Grid.Row="0" Background="#2196F3" Padding="25" BorderThickness="0,0,0,2" BorderBrush="#1976D2">
            <StackPanel>
                <TextBlock Text="SISTEMA DE GESTÃO" 
                          FontSize="26" 
                          FontWeight="SemiBold" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          FontFamily="Segoe UI"/>
                <TextBlock Text="Gerenciamento de Pessoas, Produtos e Pedidos" 
                          FontSize="14" 
                          Foreground="#E3F2FD"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"
                          FontFamily="Segoe UI"/>
            </StackPanel>
        </Border>

        <!-- Menu-->
        <StackPanel Grid.Row="1" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   Margin="20">

            <Button Content="👥   CADASTRO DE PESSOAS" 
                   Width="320" 
                   Height="65" 
                   Margin="0,8,0,8"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Background="#4CAF50"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="BtnPessoas_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="8"
                                           Padding="15">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="📦   CADASTRO DE PRODUTOS" 
                   Width="320" 
                   Height="65" 
                   Margin="0,8,0,8"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Background="#FF9800"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="BtnProdutos_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="8"
                                           Padding="15">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e68900"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="🛒   CADASTRO DE PEDIDOS" 
                   Width="320" 
                   Height="65" 
                   Margin="0,8,0,8"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Background="#9C27B0"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="BtnPedidos_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="8"
                                           Padding="15">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7B1FA2"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Window>