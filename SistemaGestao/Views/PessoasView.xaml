<Window x:Class="SistemaGestao.Views.PessoasView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:SistemaGestao.Helpers"
        Title="Cadastro de Pessoas" 
        Height="850" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <helpers:InverseBoolConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <TextBlock Grid.Row="0" 
                  Text="CADASTRO DE PESSOAS" 
                  FontSize="24" 
                  FontWeight="Bold" 
                  Margin="0,0,0,20"/>

        <!-- Filtros -->
        <GroupBox Grid.Row="1" Header="Filtros" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nome:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Width="250" 
                        Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,20,0"/>

                <TextBlock Text="CPF:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Width="150" 
                        Text="{Binding FiltroCpf, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </GroupBox>

        <!-- Grid Pessoas -->
        <DataGrid Grid.Row="2" 
                 ItemsSource="{Binding Pessoas}"
                 SelectedItem="{Binding PessoaSelecionada}"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 CanUserAddRows="False"
                 AlternatingRowBackground="LightGray"
                 Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="150"/>
                <DataGridTextColumn Header="Endereco" Binding="{Binding Endereco}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Ações -->
        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   Margin="0,10,0,10">
            <Button Content="Incluir" 
                   Width="100" 
                   Height="35"
                   Margin="0,0,10,0"
                   Command="{Binding IncluirCommand}"/>

            <Button Content="Editar" 
                   Width="100" 
                   Height="35"
                   Margin="0,0,10,0"
                   Command="{Binding EditarCommand}"/>

            <Button Content="Excluir" 
                   Width="100" 
                   Height="35"
                   Margin="0,0,10,0"
                   Command="{Binding ExcluirCommand}"/>

            <Button Content="📝 Incluir Pedido" 
                   Width="140" 
                   Height="35"
                   Background="#4CAF50"
                   Foreground="White"
                   FontWeight="Bold"
                   Click="BtnIncluirPedido_Click"/>
        </StackPanel>

        <!-- Grid Pedidos -->
        <GroupBox Grid.Row="4" 
                 Header="Pedidos da Pessoa Selecionada" 
                 Padding="10"
                 Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filtros-->
                <StackPanel Grid.Row="0" 
                           Orientation="Horizontal" 
                           Margin="0,0,0,10">
                    <Button Content="Todos" 
                           Width="100" 
                           Height="30"
                           Margin="0,0,10,0"
                           Click="BtnTodosPedidos_Click"/>

                    <Button Content="Entregues" 
                           Width="100" 
                           Height="30"
                           Margin="0,0,10,0"
                           Click="BtnPedidosEntregues_Click"/>

                    <Button Content="Pagos" 
                           Width="100" 
                           Height="30"
                           Margin="0,0,10,0"
                           Click="BtnPedidosPagos_Click"/>

                    <Button Content="Pendentes Pagamento" 
                           Width="160" 
                           Height="30"
                           Click="BtnPedidosPendentes_Click"/>
                </StackPanel>

                <!-- GRid -->
                <DataGrid Grid.Row="1" 
                         ItemsSource="{Binding PedidosDaPessoa}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         CanUserAddRows="False"
                         AlternatingRowBackground="LightGray">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Data Venda" Binding="{Binding DataVenda, StringFormat=dd/MM/yyyy HH:mm}" Width="140"/>
                        <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C}" Width="110"/>
                        <DataGridTextColumn Header="Forma Pagamento" Binding="{Binding FormaPagamento}" Width="130"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>

                        <DataGridTemplateColumn Header="Ações" Width="300">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="✓ Pago" 
                                               Width="85" 
                                               Height="25"
                                               Margin="0,0,5,0"
                                               Background="#4CAF50"
                                               Foreground="White"
                                               Command="{Binding DataContext.MarcarComoPagoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"/>

                                        <Button Content="📦 Enviado" 
                                               Width="85" 
                                               Height="25"
                                               Margin="0,0,5,0"
                                               Background="#2196F3"
                                               Foreground="White"
                                               Command="{Binding DataContext.MarcarComoEnviadoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"/>

                                        <Button Content="✓ Recebido" 
                                               Width="90" 
                                               Height="25"
                                               Background="#FF9800"
                                               Foreground="White"
                                               Command="{Binding DataContext.MarcarComoRecebidoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Edição-->
        <GroupBox Grid.Row="5" 
                 Header="Dados da Pessoa" 
                 Padding="15"
                 Visibility="{Binding ModoEdicao, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                          Text="Nome:" 
                          VerticalAlignment="Center" 
                          Margin="0,10"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                        Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,10"
                        Height="25"/>

                <TextBlock Grid.Row="1" Grid.Column="0" 
                          Text="CPF:" 
                          VerticalAlignment="Center" 
                          Margin="0,10"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                        Text="{Binding CPF, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,10"
                        Height="25"
                        MaxLength="14"/>

                <TextBlock Grid.Row="2" Grid.Column="0" 
                          Text="Endereco:" 
                          VerticalAlignment="Center" 
                          Margin="0,10"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                        Text="{Binding Endereco, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,10"
                        Height="25"/>

                <StackPanel Grid.Row="3" Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Margin="0,15,0,0">
                    <Button Content="Salvar" 
                           Width="100" 
                           Height="35"
                           Margin="0,0,10,0"
                           Command="{Binding SalvarCommand}"/>
                    <Button Content="Cancelar" 
                           Width="100" 
                           Height="35"
                           Command="{Binding CancelarCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

    </Grid>
</Window>